<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionViewSample.MainPage">
   <Grid>
      <HorizontalStackLayout VerticalOptions="Start" HorizontalOptions="Center">
         <Button
         Text="Update item"
         SemanticProperties.Hint="Update item"
         Clicked="HandleOnUpdateItemInCollectionView"/>
      <Button
         Text="Add item"
         SemanticProperties.Hint="Update item"
         Clicked="HandleOnAddItemInCollectionView"/>
      <Button
         Text="Remove item"
         SemanticProperties.Hint="Update item"
         Clicked="HandleOnRemoveItemInCollectionView"/>
      </HorizontalStackLayout>
      <CollectionView Margin="0,150,0,0" x:Name="_collectionView"></CollectionView>
   </Grid>
</ContentPage>
